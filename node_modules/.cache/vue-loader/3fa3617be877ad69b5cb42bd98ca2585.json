</v-btn>\n    </div>\n\n    <div v-else>\n      {{ commentObj.content }}\n      <v-btn color=\"blue\" style=\"width: 30px\" dark @click=\"change\"> 수정 </v-btn>\n      <v-btn color=\"red\" style=\"width: 30px\" dark @click=\"deleteComment(commentObj.no)\">삭제</v-btn>\n    </div>\n  </div>\n</template>\n\n<script>\nimport http from \"@/util/http-common\";\nexport default {\n  name: \"CommentListItem\",\n  props: [\"commentObj\", \"reloadComment\"],\n  data() {\n    return {\n      isColor: false,\n      isModify: false,\n      content: \"\",\n    };\n  },\n  methods: {\n    bgColorChange: function (flag) {\n      this.isColor = flag;\n    },\n    change() {\n      this.isModify = !this.isModify;\n      if (this.isModify) this.content = this.commentObj.content;\n    },\n    updateComment() {\n      http\n        .put(\"/comment/\" + this.commentObj.no, { content: this.content, no: this.commentObj.no })\n        .then(() => {\n          this.isModify = !this.isModify;\n          this.reloadComment();\n        });\n    },\n    deleteComment() {\n      http.delete(\"/comment/\" + this.commentObj.no).then(() => {\n        this.reloadComment();\n      });\n    },\n  },\n};\n</script>\n<style>\n.mouse-over-bgcolor {\n  background-color: #e0eeee;\n  font-size: 13pt;\n}\n</style>\n"]}]}